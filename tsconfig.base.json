{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@web/*": ["apps/web/src/*"],
      "@api/*": ["apps/api/src/*"],
      "@types/*": ["packages/types/src/*"]
    }
  }
}
