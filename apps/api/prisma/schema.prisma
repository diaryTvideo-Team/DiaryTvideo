// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String
  passwordHash  String    @map("password_hash")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  deletedAt     DateTime? @map("deleted_at")

  refreshToken           String?   @map("refresh_token")
  refreshTokenExpiresAt  DateTime? @map("refresh_token_expires_at")

  emailVerified Boolean            @default(false) @map("email_verified")
  emailVerificationToken           String?   @map("email_verification_token")
  emailVerificationTokenExpiresAt  DateTime? @map("email_verification_token_expires_at")

  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")
  lastFailedLoginAt   DateTime? @map("last_failed_login_at")
  accountLockedUntil  DateTime? @map("account_locked_until")
  lastSuccessfulLogin DateTime? @map("last_successful_login")

  passwordResetToken           String?   @map("password_reset_token")
  passwordResetTokenExpiresAt  DateTime? @map("password_reset_token_expires_at")

  diaryEntries         DiaryEntry[]

  @@index([email])
  @@index([refreshToken])
  @@index([emailVerificationToken])
  @@index([passwordResetToken])
  @@map("users")
}

model DiaryEntry {
  id           String    @id @default(uuid())
  userId       Int       @map("user_id")
  title        String
  content      String    @db.Text

  // 사용자가 일기를 작성한 날짜 (로컬 시간대 기준, YYYY-MM-DD 형식)
  // 예: 사용자가 KST 2026-01-27 23:30에 작성했다면 "2026-01-27"
  // 시간대 차이로 인한 날짜 불일치를 방지하기 위해 사용자의 로컬 날짜를 문자열로 저장
  localDate    String    @map("local_date")

  videoUrl     String?   @map("video_url")
  thumbnailUrl String?   @map("thumbnail_url")
  subtitleUrl  String?   @map("subtitle_url")

  // 일기가 생성된 정확한 시각 (UTC 기준 타임스탬프)
  // 예: KST 2026-01-27 23:30 = UTC 2026-01-27 14:30
  createdAt    DateTime  @default(now()) @map("created_at")

  // 일기가 수정된 시각 (UTC 기준 타임스탬프, 자동 업데이트)
  updatedAt    DateTime  @updatedAt @map("updated_at")

  deletedAt    DateTime? @map("deleted_at")
  videoStatus  VideoStatus  @default(PENDING) @map("video_status")
  videoError   String?      @map("video_error") @db.Text
  videoRetryCount Int @default(0) @map("video_retry_count")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([videoStatus])
  @@index([userId])
  @@index([createdAt])
  @@index([userId, localDate])
  @@map("diary_entries")
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}